<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <% %w[title memo author picture].each do |key| %>
        <th><%= Book.human_attribute_name(key) %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('dictionary.words.show'), book %></td>
        <td><%= link_to t('dictionary.words.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('dictionary.words.destroy'), book, method: :delete, data: { confirm: t('dictionary.messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

